extends layout

// block header

block content

    .container
        h1 Регистрация
        p Придумай логин и пароль.
        br
        form(role='form', action="/register", method="post", style='max-width: 300px;')
            .form-group
                input.form-control(type='text', name="username", placeholder='Логин')
            .form-group
                input.form-control(type='password', name="password", placeholder='Пароль')
            button.btn.btn-default(type='submit') Зарегистрироваться
        | &nbsp;

    a(href='/')
        button.btn.btn-primary(type="button") Отмена